{% extends 'dashboard/index.html.twig' %}

{% block title %}Stars{% endblock %}

{% block body %}
    <h1>Stars</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ star.id }}</td>
            </tr>
            <tr>
                <th>Constellation_id</th>
                <td>{{ star.constellationId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ star.name }}</td>
            </tr>
            <tr>
                <th>X_position</th>
                <td>{{ star.xPosition }}</td>
            </tr>
            <tr>
                <th>Y_position</th>
                <td>{{ star.yPosition }}</td>
            </tr>
            <tr>
                <th>Brightness</th>
                <td>{{ star.brightness }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ star.color }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ star.createdAt ? star.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ star.updatedAt ? star.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_stars') }}" class="lienBtnCreate">Retour</a>

    <a href="{{ path('app_stars_edit', {'id': star.id}) }}" class="lienBtn">Modifier</a>
    {{ include('stars/_delete_form.html.twig') }}
{% endblock %}

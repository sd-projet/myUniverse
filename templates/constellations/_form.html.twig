{% block body %}
	<div class="container">
		<div class="main">
			{{ form_start(form, {'attr': {'class': 'form-container'}}) }}
			<div class="form-grid">
				<div>
					<div class="form-group">
						{{ form_label(form.name, 'Nom de la Constellation') }}
						{{ form_widget(form.name, {'attr': {'placeholder': 'Nom de votre constellation'}}) }}
					</div>

					<div class="form-group">
						{{ form_label(form.description, 'Description') }}
						{{ form_widget(form.description, {'attr': {'placeholder': 'Décrivez votre constellation'}}) }}
					</div>


				</div>
				<div>
					<div class="form-group">
						{{ form_label(form.etoile, 'Ajouter des étoiles') }}
						{{ form_widget(form.etoile, {'id': 'etoile-select' , 'multiple': 'multiple'}) }}
						{{ form_errors(form.etoile) }}
						<!--<input type="hidden" id="etoile-json" name="etoile_json"> -->
						<!-- Champ caché -->
						<input type="hidden" id="etoile-json" name="etoile_json" value='{{ form.etoile.vars.value|json_encode }}'> <div id="selected-stars"></div>
					</div>
				</div>

				<!-- Conteneur pour la vue 3D -->
				<div id="threejs-containerConstel"></div>

				<div class="form-footer">
					<button type="submit">{{ button_label|default('Créer ma contellation') }}</button>
				</div>

				{{ form_end(form) }}
			</div>
		
			
			</div>
		{% endblock %}

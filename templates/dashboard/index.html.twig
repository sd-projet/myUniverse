		</a>

		<!-- Mes Partages -->
		<a href="#" class="menu-item">
			<i class="fas fa-share-alt"></i>
			Mes Partages
		</a>

		<!-- Divider -->
		<div class="divider"></div>

		<!-- Paramètres -->
		<a href="#" class="menu-item">
			<i class="fas fa-cog"></i>
			Paramètres
		</a>

		<!-- Me déconnecter -->
		<a href="{{ path('app_logout') }}" class="menu-item">
			<i class="fas fa-sign-out-alt"></i>
			Me déconnecter
		</a>
	</aside>
{% endblock %}


{% block body %}

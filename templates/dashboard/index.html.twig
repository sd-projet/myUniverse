{% block sidebar %}
	<aside class="sidebar">
		<!-- Accueil -->
		<a href="{{ path('app_home') }}" class="menu-item {% if app.request.attributes.get('_route') == 'app_home' %}active{% endif %}">
			<i class="fas fa-home"></i>
			Accueil
		</a>

		<!-- Mes Étoiles -->
		<a href="{{ path('app_user_stars') }}" class="menu-item {% if app.request.attributes.get('_route') == 'app_user_stars' %}active{% endif %}">
